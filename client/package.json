{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "format": "prettier --write *.{jsx,js} __tests__/**/*.{jsx,js}",
    "format:check": "prettier --check *.{jsx,js} __tests__/**/*.{jsx,js} ",
    "dev": "parcel watch index.html",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "verify": "npm run format:check && npm run test:coverage",
    "build": "npm install --include=dev && parcel build index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "*{.jsx,js}",
      "pages/*{.jsx,js}"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "parcel": "^2.3.1",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@parcel/transformer-react-refresh-wrap": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1"
  }
}
